@model CDSC.Models.SuplementacaoModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Salvar", "Suplementacao", FormMethod.Post))
{

    <div class="main">
        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div class="container-fluid">
                <!-- OVERVIEW -->
                <div class="panel panel-headline">
                    <div class="panel-heading">
                        <h3 class="panel-title">Suplementações</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="panel-heading">
                                <h3 class="panel-title">Suplementação de Ferro</h3>
                            </div>
                            <div class="col-md-6">
                                <h3 class="panel-title">Data:</h3>
                                @Html.TextBoxFor(model => model.suplementacaoFerroData, new { @class = "form-control datepicker-here suplementacaoFerroData", @maxlength = "10" })
                            </div>
                            <div class="col-md-6">
                                <h3 class="panel-title">Local:</h3>
                                @Html.TextBoxFor(model => model.suplementacaoFerroLocal, new { @validate = "required", @class = "form-control suplementacaoFerroLocal", @maxlength = "50" })
                            </div>

                        </div>
                        <div class="clearfix"></div>
                        <br />



                        <div class="row pull-right">
                            <div class="col-md-12">
                                <button onclick="addSuplementacaoDeFerro()" class="btn btn-success">Adicionar</button>

                                @*@Html.ActionLink("Voltar", "Voltar", "Suplementacao", new { @class = "btn bt-padrao" })*@
                                @*@Html.ActionLink("Adicionar", "AdicionarSuplementacaoFerro", "Suplementacao", Model, new { @class = "btn bt-padrao" })*@
                                @*@Html.ActionLink("Adicionar2", "AdicionarSuplementacaoFerro", "Suplementacao", new { local = Model.suplementacaoFerroLocal }, new { @class = "btn bt-padrao" })*@
                                @*@Html.ActionLink("Adicionar2", "AdicionarSuplementacaoFerro", new { controller = "Suplementacao", id = Model }, new { @class = "btn bt-padrao" })*@
                                @*@Html.ActionLink("Adicionar2", "AdicionarSuplementacaoFerro", "Suplementacao", new { JSONModel = Json.Encode(Model) }, null)*@
                                @*<button type="submit" class="btn btn-success">Salvar</button>*@
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="row">
                            <div class="col-md-12">
                                <!-- BASIC TABLE -->
                                <div class="panel">
                                    @*<div class="panel-heading">
                                            <h3 class="panel-title">Suplementações de Ferro</h3>
                                        </div>*@
                                    <div class="panel-body">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Data</th>
                                                    <th>Onde</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (var i = 0; i < Model.listaSuplementacaoFerro.Count; i++)
                                                {
                                                    <tr>
                                                        <td>@Html.DisplayFor(modelItem => Model.listaSuplementacaoFerro[i].suplementacaoFerroData)</td>
                                                        <td>@Html.DisplayFor(modelItem => Model.listaSuplementacaoFerro[i].suplementacaoFerroLocal)</td>
                                                    </tr>
                                                }
                                                @*<tr>
                                                    <td>12/04/2001</td>
                                                    <td>Posto de Saúde</td>
                                                </tr>*@
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- END BASIC TABLE -->
                            </div>
                        </div>

                        <div class="clearfix"></div>
                        <br />

                        <div class="row">
                            <div class="panel-heading">
                                <h3 class="panel-title">Suplementação de Vitamina A</h3>
                            </div>
                            <div class="col-md-6">
                                <h3 class="panel-title">Data:</h3>
                                @Html.TextBoxFor(model => model.suplementacaoVitaminaAData, new { @class = "form-control datepicker-here suplementacaoVitaminaAData", @maxlength = "10" })
                            </div>
                            <div class="col-md-6">
                                <h3 class="panel-title">Local:</h3>
                                @Html.TextBoxFor(model => model.suplementacaoVitaminaALocal, new { @validate = "required", @class = "form-control suplementacaoVitaminaALocal", @maxlength = "50" })
                            </div>

                        </div>
                        <div class="clearfix"></div>
                        <br />



                        <div class="row pull-right">
                            <div class="col-md-12">

                                <button onclick="addSuplementacaoDeVitaminaA()" class="btn btn-success">Adicionar</button>


                                @*<button type="submit" class="btn btn-success">Salvar</button>*@
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div class="row">
                            <div class="col-md-12">
                                <!-- BASIC TABLE -->
                                <div class="panel">
                                    @*<div class="panel-heading">
                                            <h3 class="panel-title">Suplementações de Ferro</h3>
                                        </div>*@
                                    <div class="panel-body">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>Data</th>
                                                    <th>Onde</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (var i = 0; i < Model.listaSuplementacaoVitaminaA.Count; i++)
                                                {
                                                    <tr>
                                                        <td>@Html.DisplayFor(modelItem => Model.listaSuplementacaoVitaminaA[i].suplementacaoVitaminaALocal)</td>
                                                        <td>@Html.DisplayFor(modelItem => Model.listaSuplementacaoVitaminaA[i].suplementacaoVitaminaAData)</td>
                                                    </tr>
                                                }
                                                @*<tr>
                                                    <td>12/04/2001</td>
                                                    <td>Posto de Saúde</td>
                                                </tr>*@                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- END BASIC TABLE -->
                            </div>
                        </div>





                        <div class="row pull-right">
                            <div class="col-md-12">
                                @Html.ActionLink("Voltar", "Voltar", "Suplementacao", new { @class = "btn bt-padrao" })
                                @Html.ActionLink("Avancar", "Avancar", "Suplementacao", new { @class = "btn bt-padrao" })
                            </div>
                        </div>
                        <div class="clearfix"></div>



                    </div>
                </div>

            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.datepicker-here').attr('data-language', 'pt-BR');
        });

        function addSuplementacaoDeFerro() {
            var suplementacaoFerroData = $(".suplementacaoFerroData").val();
            var suplementacaoFerroLocal = $(".suplementacaoFerroLocal").val();

            $.post('@Url.Content("~/Suplementacao/AddSuplementacaoFerro/")', { suplementacaoFerroData, suplementacaoFerroLocal }, function (data) {                
                //loadTableSimilar();
            });
        };

        function addSuplementacaoDeVitaminaA() {
            var suplementacaoVitaminaAData = $(".suplementacaoVitaminaAData").val();
            var suplementacaoVitaminaALocal = $(".suplementacaoVitaminaALocal").val();

            $.post('@Url.Content("~/Suplementacao/AddSuplementacaoDeVitaminaA/")', { suplementacaoVitaminaAData, suplementacaoVitaminaALocal }, function (data) {
                //loadTableSimilar();
            });
        };
        

        


    </script>

}


